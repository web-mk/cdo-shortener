{
  "manifest_version": 3,
  "name": "CDO Shortener",
  "version": "2.0",
  "description": "Shortens Chabad.org links.",
  "permissions": ["clipboardWrite", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/cdo-icon-16.png",
      "32": "images/cdo-icon-32.png",
      "48": "images/cdo-icon-48.png",
      "128": "images/cdo-icon-128.png"
    },
    "default_title": "CDO Shortener"
  },
  "commands": {
    "shorten": {
      "suggested_key": {
        "default": "Ctrl+Shift+O"
      },
      "description": "Grab the short URL"
    }
  }
}
